<Window x:Class="Cybersecurity_Chatbot_GUI.Views.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Assistant"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="New Cybersecurity Task:"
                   FontSize="16"
                   Foreground="White" Margin="0 0 0 5"/>

        <TextBox Name="TaskTitleBox" Grid.Row="1"
                 Height="30" FontSize="14"
                 Background="#2C2C3A" Foreground="White"
                 Margin="0 0 0 10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="Reminder (days):"
                       VerticalAlignment="Center" Foreground="White"/>
            <TextBox Name="ReminderDaysBox" PreviewTextInput="ReminderDaysBox_PreviewTextInput"
                     Width="50" Margin="10 0 0 0"
                     Background="#2C2C3A" Foreground="White"/>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Add Task Button -->
                <RowDefinition Height="*"/>
                <!-- ListBox -->
                <RowDefinition Height="Auto"/>
                <!-- Complete/Delete Buttons -->
                <RowDefinition Height="Auto"/>
                <!-- Go Back Button -->
            </Grid.RowDefinitions>

            <!-- Add Task -->
            <Button Content="Add Task" Height="35" Click="AddTask_Click"
            Background="DarkCyan" Foreground="White" Margin="0 0 0 10" Grid.Row="0"/>

            <!-- Task List -->
            <ListBox Name="TaskList" Background="#2C2C3A" Foreground="White" Grid.Row="1"/>

            <!-- Task Actions Row -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0" Grid.Row="2">
                <Button Content="Mark Completed" Margin="0 0 10 0" Click="CompleteTask_Click"/>
                <Button Content="Delete Task" Click="DeleteTask_Click"/>
            </StackPanel>

            <!-- Go Back Button Row -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0" Grid.Row="3">
                <Button Content="Go Back" Height="30" Width="100" Click="GoBack_Click"
                Background="Gray" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
