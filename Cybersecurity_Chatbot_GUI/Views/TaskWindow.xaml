<Window x:Class="Cybersecurity_Chatbot_GUI.Views.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Assistant"
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F"
        Loaded="TaskWindow_Loaded">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="New Cybersecurity Task:"
                   FontSize="16"
                   Foreground="White"
                   Margin="0,0,0,5"
                   Grid.Row="0"/>

        <!-- 1: Title input -->
        <TextBox x:Name="TaskTitleBox"
                 Grid.Row="1"
                 Height="30"
                 FontSize="14"
                 Background="#2C2C3A"
                 Foreground="White"
                 Margin="0,0,0,10"/>

        <!-- 2: Description + Due date/time -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Description:" Foreground="White"/>
            <TextBox x:Name="TaskDescBox"
                     AcceptsReturn="True"
                     Height="60"
                     TextWrapping="Wrap"
                     Background="#2C2C3A"
                     Foreground="White"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Due Date:" VerticalAlignment="Center" Foreground="White"/>
                <DatePicker x:Name="TaskDueDatePicker" Margin="10,0,0,0"/>

                <TextBlock Text="Due Time (HH:mm):"
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="White"/>
                <TextBox x:Name="TaskDueTimeBox"
                         Width="60"
                         Margin="5,0,0,0"
                         Background="#2C2C3A"
                         Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <!-- 3: Add / List / Actions -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Add button -->
                <RowDefinition Height="*"/>
                <!-- ListBox -->
                <RowDefinition Height="Auto"/>
                <!-- Complete/Delete -->
                <RowDefinition Height="Auto"/>
                <!-- Go Back -->
            </Grid.RowDefinitions>

            <!-- Add Task -->
            <Button Content="Add Task"
                    Height="35"
                    Click="AddTask_Click"
                    Background="DarkCyan"
                    Foreground="White"
                    Margin="0,0,0,10"
                    Grid.Row="0"/>

            <!-- Task List -->
            <ListBox x:Name="TaskList"
                     Background="#2C2C3A"
                     Foreground="White"
                     Grid.Row="1"/>

            <!-- Mark Completed / Delete -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"
                        Grid.Row="2">
                <Button Content="Mark Completed"
                        Margin="0,0,10,0"
                        Click="CompleteTask_Click"/>
                <Button Content="Delete Task"
                        Click="DeleteTask_Click"/>
            </StackPanel>

            <!-- Go Back -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"
                        Grid.Row="3">
                <Button Content="Go Back"
                        Width="100"
                        Height="30"
                        Click="GoBack_Click"
                        Background="Gray"
                        Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
