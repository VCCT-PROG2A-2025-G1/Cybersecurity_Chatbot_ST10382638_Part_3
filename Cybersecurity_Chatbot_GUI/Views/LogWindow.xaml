<Window x:Class="Cybersecurity_Chatbot_GUI.Views.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cybersecurity_Chatbot_GUI.Views"
        mc:Ignorable="d"
        Title="Activity Log" Height="400" Width="400"
         WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- log list -->
            <RowDefinition Height="Auto" />
            <!-- buttons -->
        </Grid.RowDefinitions>

        <!-- 1) The ListBox to show entries -->
        <ListBox x:Name="LogList"
             Background="#2C2C3A"
             Foreground="White"
             FontFamily="Consolas"
             Grid.Row="0" />

        <!-- 2) Show More & Close -->
        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Right"
                Grid.Row="1"
                Margin="0,10,0,0">
            <Button Content="Show More"
              Width="80"
              Click="ShowMore_Click"
              Margin="0,0,10,0"/>
            <Button Content="Close"
              Width="60"
              Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
