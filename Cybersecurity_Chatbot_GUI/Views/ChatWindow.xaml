<Window x:Class="Cybersecurity_Chatbot_GUI.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat with Cybersecurity Bot"
        Height="600" Width="800"
        Background="Black"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ChatStack"/>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="UserInput" Width="600" Height="30" Margin="0,0,10,0"/>
            <Button Content="Send" Width="100" Height="30" Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Window>
