<Window x:Class="Cybersecurity_Chatbot_GUI.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Chatbot" Height="600" Width="500"
        WindowStartupLocation="CenterScreen" Background="#1E1E2F"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="CYBERSECURITY CHATBOT"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="Cyan"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10" />

        <ScrollViewer Grid.Row="1" Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" Background="#111">
            <StackPanel Name="ChatStackPanel" Margin="5"/>
        </ScrollViewer>

        <DockPanel Grid.Row="2" Margin="0 10 0 0">
            <TextBox Name="UserInputTextBox"
                     IsEnabled="False"
                     Height="35"
                     VerticalContentAlignment="Center"
                     FontSize="14"
                     Margin="0 0 5 0"
                     Background="#2C2C3A"
                     Foreground="White"
                     BorderBrush="Gray"
                     BorderThickness="1"
                     Padding="5"
                     DockPanel.Dock="Left"
                     Width="380"
                     KeyDown="UserInputTextBox_KeyDown"/>

            <Button Name="SendButton"
                    Content="Send ▶"
                    Width="80"
                    Height="35"
                    FontWeight="Bold"
                    Click="OnSendClicked"
                    IsEnabled="False"
                    Background="DarkCyan"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand" />
        </DockPanel>
    </Grid>
</Window>
